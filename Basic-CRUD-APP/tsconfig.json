{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./out-tsc",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"]
  }
}
